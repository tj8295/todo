%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@todo, html: { class: "form-horizontal" } ) do |f|
        = f.text_field :name
        = f.text_field :description
        = f.submit "Add Todo"
      %br
      %ul
        - @todos.each do |todo|
          %li= link_to todo.name, todo_path(todo)
